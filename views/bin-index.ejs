      <div class="line-numbers">
        <% for( let i=1; i <=code.split('\n').length; i++ ) { %>
          <div>
            <%= i %>
          </div>
          <% } %>
      </div>
      <pre><code 
        id="code-display" 
        class="<%= locals.language ? `language-${locals.language}` : "" %> "><%= code %> </code></pre>
    </div>
